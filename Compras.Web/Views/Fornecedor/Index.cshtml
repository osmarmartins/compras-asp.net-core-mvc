@model IEnumerable<Compras.Web.Models.Fornecedor>

@{
    Layout = "~/Views/Shared/_LayoutCompras.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        <a asp-action="Create">Novo</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FornecedorID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RazaoSocial)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CpfCnpj)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FornecedorID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RazaoSocial)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CpfCnpj)
                    </td>
                    <td>
                        @Html.ActionLink("Alterar", "Edit", new { id = item.FornecedorID }) |
                        @Html.ActionLink("Detalhes", "Details", new { id = item.FornecedorID }) |
                        @Html.ActionLink("Excluir", "Delete", new { id = item.FornecedorID })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
